##########################################
# zsh/oh-my-zsh aliasies
##########################################
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias reload!="source ~/.zshrc"


##########################################
# Easier Navigation aliases
##########################################
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

##########################################
# Program initialization aliases
##########################################

alias julia="exec '/Applications/Julia-1.5.app/Contents/Resources/julia/bin/julia'"
alias VLC="open -a VLC"
alias nb="jupyter notebook"
alias matlab="exec '/Applications/MATLAB_R2020b.app/bin/matlab'"

